{% extends 'base.html.twig' %}

{% block title %}Ajouter un rôle{% endblock %}

{% block body %}
    <h1>Ajouter un rôle</h1>

    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <form method="post" action="{{ path('role_new') }}">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.permissions) }}
        <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </form>

    <a href="{{ path('role_index') }}">Retour à la liste des rôles</a>
{% endblock %}
